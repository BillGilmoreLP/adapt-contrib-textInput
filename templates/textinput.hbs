<div class="c-text-input c-text-input component-inner">
    {{> component this}}
    {{! complex unless and if combination to set the correct classes for CSS to use in showing marking and disabled states}}
    <div class="c-text-input__widget component-widget {{#unless _isEnabled}} disabled {{#if _isInteractionComplete}} complete submitted show-user-answer {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        {{#each _items}}
        <div class="c-text-input__item component-item component-item-color component-item-border clearfix {{#if prefix}}prefix{{/if}} {{#if suffix}}suffix{{/if}} {{#unless ../_isEnabled}}{{#if ../_canShowMarking}}{{#if _isCorrect}}correct{{else}}incorrect{{/if}}{{/if}}{{/unless}}">
            {{#if prefix}}
                <label class="c-text-input__prefix component-item-text-color" id="{{../_id}}-{{@index}}-aria" for="{{../_id}}-{{@index}}" aria-label="{{{prefix}}}">
                    {{{prefix}}}
                </label>
            {{/if}}
            {{#if ../_isEnabled}}
                <input type="text" placeholder="{{{placeholder}}}" class="c-text-input__textbox" data-id="input-{{@index}}" id="{{../_id}}-{{@index}}" aria-labelledby="{{../_id}}-{{@index}}-aria" value="">
            {{else}}
                <input type="text" placeholder="{{{placeholder}}}" class="c-text-input__textbox" data-id="input-{{@index}}" value="{{userAnswer}}" disabled="true">
            {{/if}}
            {{#if suffix}}
                <label class="c-text-input__suffix component-item-text-color" id="{{../_id}}-{{@index}}-aria" for="{{../_id}}-{{@index}}" aria-label="{{{suffix}}}">
                    {{{suffix}}}
                </label>
            {{/if}}
            <div class="c-text-input__state">
                <div class="c-text-input__icon c-text-input__icon--correct icon icon-tick"></div>
                <div class="c-text-input__icon c-text-input__icon--incorrect icon icon-cross"></div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="buttons">
    </div>
</div>
